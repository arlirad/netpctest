@using NetPCTest.Frontend.Services
@inject ILocalisationService LocalisationService

@*
 * Provides a way of dynamically translating strings using ILocalisationService.
 *@

@LocalisationService.Translate(Key)

@code {
    [Parameter] 
    public string Key { get; set; } = "";

    protected override void OnInitialized()
    {
        LocalisationService.OnLocaleChanged += StateHasChanged;
    }

    public void Dispose()
    {
        LocalisationService.OnLocaleChanged -= StateHasChanged;
    }
}